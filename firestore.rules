rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Global Config: Public Read, Admin Write (Client side blocked, Server side bypasses)
    match /config/global {
      allow read: if true;
      allow write: if false; // Only Admin SDK can write
    }

    // Wishes: Public Create (for wishing), Public Read, No Delete (Admin Deletes via API)
    match /wishes/{wishId} {
      allow read: if true;
      allow create: if true; // Anyone can wish
      allow update: if false;
      allow delete: if false; // Only Admin SDK can delete
    }
  }
}
